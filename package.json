{
	"name": "markdown2textile",
	"displayName": "Markdown2Textile",
	"description": "VS Code extension to convert Markdown to Textile",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "irisTa56",
	"repository": {
		"type": "git",
		"url": "https://github.com/irisTa56/markdown2textile.git"
	},
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.convertText",
				"title": "Markdown2Textile: Copy as Textile"
			},
			{
				"command": "extension.selectPythonInterpreter",
				"title": "Markdown2Textile: Select Python Interpreter"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection && editorLangId == markdown",
					"command": "extension.convertText",
					"group": "9_cutcopypaste@100"
				}
			]
		}
	},
	"build": {
		"extraResources": "scripts"
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"watch": "webpack --mode none --watch",
		"test-compile": "tsc -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run test-compile && node ./node_modules/vscode/bin/test",
		"eslint": "eslint -c .eslintrc.json 'src/**/*.ts'"
	},
	"extensionDependencies": [
		"ms-python.python"
	],
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/eslint-plugin-tslint": "^1.9.0",
		"@typescript-eslint/parser": "^1.9.0",
		"eslint": "^5.16.0",
		"ts-loader": "^6.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"webpack": "^4.33.0",
		"webpack-cli": "^3.3.3"
	},
	"dependencies": {
		"python-shell": "^1.0.7",
		"replace-in-file": "^4.1.0"
	}
}
