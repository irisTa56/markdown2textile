{
	"name": "markdown2textile",
	"displayName": "Markdown2Textile",
	"description": "Convert Markdown to Textile",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.convert"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.convert",
				"title": "Copy as Textile"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection && editorLangId == markdown",
					"command": "extension.convert",
					"group": "9_cutcopypaste@100"
				}
			]
		}
	},
	"build": {
		"extraResources": "scripts"
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test",
		"eslint": "eslint -c .eslintrc.json 'src/**/*.ts'"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/eslint-plugin-tslint": "^1.9.0",
		"@typescript-eslint/parser": "^1.9.0",
		"eslint": "^5.16.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"python-shell": "^1.0.7",
		"replace-in-file": "^4.1.0"
	}
}
